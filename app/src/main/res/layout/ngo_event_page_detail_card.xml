<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/White">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="20dp"
            android:background="@color/White">
            <TextView
                android:id="@+id/detail_name_of_event_ngo_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details Name of The Event"
                android:textColor="@color/primary_text"
                android:textSize="19sp"/>

            <View
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="#fafafa"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingBottom="3dp">

                <ImageView
                    android:id="@+id/icon_time_specific_ngo_event"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:paddingTop="4dp"
                    android:src="@drawable/ic_time_specific_ngo_event"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@color/White">
                <TextView
                    android:id="@+id/date_day_event_specific_ngo_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DateandDay"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:id="@+id/time_event_specific_ngo_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:paddingLeft="10dp"/>
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/icon_place_specific_ngo_event"
                    android:layout_width="25dp"
                    android:src="@drawable/ic_location_specific_ngo_event"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/address_event_specific_ngo_event"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Place Name"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:paddingTop="3dp"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
